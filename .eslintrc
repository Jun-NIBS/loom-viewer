{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": true
        }
    },
    "env": {
        "browser": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": 0,
        "semi": 2,
        "no-var": 2,
        "eqeqeq": 2,
        "curly": 2,
        "no-unmodified-loop-condition": 2,
        "yoda": 2,
        "arrow-body-style": [
            "error",
            "always"
        ],
        "arrow-parens": 2,
        "arrow-spacing": 2,
        "prefer-arrow-callback": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-implicit-coercion": 2,
        "comma-style": [
            "error",
            "last"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        "no-mixed-spaces-and-tabs": 2,
        "no-whitespace-before-property": 2,
        "no-unneeded-ternary": 2,
        "indent": [
            "error",
            "tab"
        ],
        //Not so much errors as warnings that
        //it might be time to refactor the code
        "max-params": [
            1,
            {
                "max": 4
            }
        ], // too many function parameters
        "max-nested-callbacks": [
            1,
            3
        ], // callback nesting gets too deep
        "max-depth": [
            1,
            {
                "max": 4
            }
        ], // max depth of nesting in general
        // React rules
        "react/jsx-uses-react": 2,
        "react/react-in-jsx-scope": 2,
        "react/require-render-return": 2,
        "react/no-unknown-property": 2,
        "react/prefer-stateless-function": 1,
        "react/wrap-multilines": 2,
        "react/no-danger": 2,
        "react/jsx-uses-vars": 2,
        "react/jsx-no-undef": 2,
        "react/jsx-no-duplicate-props": 2,
        "react/no-direct-mutation-state": 2,
        "react/no-did-update-set-state": 2, // use componentWillUpdate instead
        "react/no-did-mount-set-state": 2, // use componentWillMount instead
        "react/no-deprecated": 2,
        "react/prop-types": 2,
        "react/jsx-no-bind": 1, // refactoring to prototype functions is more efficient
        "react/jsx-indent": [2, "tab"],
        "react/jsx-indent-props": [2, "tab"],
        "react/jsx-max-props-per-line": [2, { "maximum": 2 }],
        "react/jsx-equals-spacing": [2, "never"],
        "react/jsx-space-before-closing": 2,
        "react/jsx-boolean-value": [2, "never"],
        "react/no-comment-textnodes": 2
    }
}