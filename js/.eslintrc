{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": true,
        },
    },
    "env": {
        "browser": true
    },
    "rules": {
        "no-console": 0,
        "semi": 2,
        "no-var": 2,
        "eqeqeq": 2,
        "curly": 2,
        "no-unmodified-loop-condition": 2,
        "yoda": 2,
        "arrow-body-style": [ "error", "always" ],
        "arrow-parens": 2,
        "arrow-spacing": 2,
        "prefer-arrow-callback": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-implicit-coercion": 2,
        "comma-style": [
            "error",
            "last"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "comma-dangle": [ "error", "always-multiline" ],
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
    }
}